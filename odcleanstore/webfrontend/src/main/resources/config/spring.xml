<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    xmlns:context="http://www.springframework.org/schema/context"    xsi:schemaLocation="http://www.springframework.org/schema/beans                         http://www.springframework.org/schema/beans/spring-beans.xsd                        http://www.springframework.org/schema/context                         http://www.springframework.org/schema/context/spring-context.xsd">	<!-- Properties -->	<context:property-placeholder location="./config/*.properties" />		<!-- Application Configuration -->	<bean 		id="connectionCoords" 		class="cz.cuni.mff.odcleanstore.util.JDBCConnectionCredentials">				<constructor-arg value="${jdbc.driverClassName}" />		<constructor-arg value="${jdbc.url}" />		<constructor-arg value="${jdbc.username}" />		<constructor-arg value="${jdbc.password}" />	</bean>			<bean		id="appConfig"		class="cz.cuni.mff.odcleanstore.webfrontend.configuration.Configuration">				<constructor-arg ref="connectionCoords" />		<constructor-arg value="${gmail.address}" />		<constructor-arg value="${gmail.password}" />	</bean></beans>